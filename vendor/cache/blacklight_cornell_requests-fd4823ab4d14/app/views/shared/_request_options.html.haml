%table.table.table-striped.table-bordered.request-options  
  %thead
    %tr
      %th
        Request type
      %th
        Approximate availability
  - if @alternate_request_options    
    - @alternate_request_options.each do |option|
      - if option[:option] == 'l2l'
        %tr
          %td
            - if @volume.blank?
              = link_to request_l2l_path(@id), {:title => @ti} do 
                %h2.blacklight-title_display 
                  %i.fa.fa-arrow-circle-right 
                  Library to library
            - else
              = link_to request_l2l_vol_path(:bibid => @id, :volume => @volume), {:title => @ti} do 
                %h2.blacklight-title_display 
                  %i.fa.fa-arrow-circle-right 
                  Library to library
          %td  
            = delivery_estimate_display option[:estimate]
            \.
      - elsif option[:option] == 'bd'
        %tr
          %td
            = link_to request_bd_path(@id), {:title => @ti} do 
              %h2.blacklight-title_display 
                %i.fa.fa-arrow-circle-right 
                Borrow Direct
          %td 
            = delivery_estimate_display option[:estimate]
            \.
      - elsif option[:option] == 'hold'
        %tr
          %td
            - if @volume.blank?
              = link_to request_hold_path(@id), {:title => @ti} do 
                %h2.blacklight-title_display 
                  %i.fa.fa-arrow-circle-right 
                  Hold
            - else
              = link_to request_hold_vol_path(:bibid => @id, :volume => @volume), {:title => @ti} do 
                %h2.blacklight-title_display 
                  %i.fa.fa-arrow-circle-right 
                  Hold
          %td
            = delivery_estimate_display option[:estimate]
            \.      
      - elsif option[:option] == 'recall'
        %tr
          %td
            - if @volume.blank?
              = link_to request_recall_path(@id), {:title => @ti} do 
                %h2.blacklight-title_display 
                  %i.fa.fa-arrow-circle-right 
                  Recall
            - else
              = link_to request_recall_vol_path(:bibid => @id, :volume => @volume), {:title => @ti} do 
                %h2.blacklight-title_display 
                  %i.fa.fa-arrow-circle-right 
                  Recall
          %td
            = delivery_estimate_display option[:estimate]
            \.
      - elsif option[:option] == 'purchase'
        %tr
          %td
            = link_to request_purchase_path(@id), {:title => @ti} do 
              %h2.blacklight-title_display 
                %i.fa.fa-arrow-circle-right 
                Purchase request
          %td
            = delivery_estimate_display option[:estimate]
            \.
      - elsif option[:option] == 'ill'
        %tr
          %td
            = link_to request_ill_path(@id), {:title => @ti} do 
              %h2.blacklight-title_display 
                %i.fa.fa-arrow-circle-right 
                Interlibrary Loan
          %td
            = delivery_estimate_display option[:estimate]
            \.
      - elsif option[:option] == 'circ'
        %tr
          %td
            = link_to request_circ_path(@id), {:title => @ti} do
              %h2.blacklight-title_display
                %i.fa.fa-arrow-circle-right
                Check circulation
          %td
            This item is a short-term loan. Please check at the circulation desk.
      - elsif option[:option] == 'document_delivery'
        %tr
          %td
            = link_to request_document_delivery_path(@id), {:title => @ti} do
              %h2.blacklight-title_display
                %i.fa.fa-arrow-circle-right &nbsp;
                Document delivery
          %td
            = delivery_estimate_display option[:estimate]
            \.
      - elsif option[:option] == 'pda'
        %tr
          %td
            = link_to request_pda_path(@id), {:title => @ti} do
              %h2.blacklight-title_display
                %i.fa.fa-arrow-circle-right &nbsp;
                Purchase request
          %td
            = delivery_estimate_display option[:estimate]
            \.
%p 
  If you need further help, please 
  =link_to 'Ask a Librarian','http://ask.library.cornell.edu'
  &#046;

