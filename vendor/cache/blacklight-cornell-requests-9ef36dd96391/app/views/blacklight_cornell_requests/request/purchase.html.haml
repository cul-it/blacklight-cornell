-title = the_vernaculator('title_display', 'title_vern_display')
-subtitle = the_vernaculator('subtitle_display', 'subtitle_vern_display')
-responsibility = render_document_show_field_value :document => @document, :field => 'title_responsibility_display'
= render :partial => 'shared/back_to_item'
- unless flash[:success]
  %h2 Purchase Request
  %div.well
    %h3.item-title-request.blacklight-title_display=title
    %div.request-author=responsibility
    %form#req.form-horizontal{:method => 'post', :action => blacklight_cornell_request.make_purchase_request_path}
      %input(type="hidden" name="bid" value="#{@id}" id="bid")
      %input(type="hidden" name="request_action" value="purchase" id="request_action")
      .form-group
        %label.control-label.col-sm-2{:for => 'reqname'} Name:
        .col-sm-10
          %input#reqname{:type => 'text', :class => 'form-control', :name => 'name', :value => @name}
          %span.help-block.required (required)
      .form-group
        %label.control-label.col-sm-2{:for => 'reqemail'} Email address:
        .col-sm-10
          %input#reqemail{:type => 'text', :class => 'form-control', :name => 'email', :value => "#{@netid}@cornell.edu"}
          %span.help-block.required (required)
      .form-group
        %label.control-label.col-sm-2{:for => 'reqstatus'} Status:
        .col-sm-10
          %select#reqstatus{:name => 'reqstatus', :class => 'form-control'}
            %option{:value => ''} - Select -
            %option{:value => 'undergrad'} Cornell Undergraduate Student
            %option{:value => 'grad'} Cornell Graduate Student
            %option{:value => 'faculty'} Cornell Faculty
            %option{:value => 'staff'} Cornell Staff
            %option{:value => 'alum'} Alumnus/Alumna
            %option{:value => 'other'} Other
          %span.help-block.required (required)

      .form-group
        %label.control-label.col-sm-2{:for => 'reqtitle'} Title:
        .col-sm-10
          %input#reqtitle.input-xxlarge{:type => 'text', :class => 'form-control', :name => 'reqtitle', :value => @ti}
          %span.help-block.required (required)

      .form-group
        %label.control-label.col-sm-2{:for => 'reqauthor'} Author:
        .col-sm-10
          %input#reqauthor.input-xxlarge{:type => 'text', :class => 'form-control', :name => 'reqauthor', :value => @au}
      .form-group
        %label.control-label.col-sm-2{:for => 'reqseries'} Series:
        .col-sm-10
          %input#reqseries.input-xxlarge{:type => 'text', :class => 'form-control', :name => 'reqseries', :value => (!@document[:title_series_display].nil? ? @document[:title_series_display][0] : '')}
      .form-group
        %label.control-label.col-sm-2{:for => 'reqpublication'} Place, publisher, and year of publication:
        .col-sm-10
          %input#reqpublication.input-xxlarge{:type => 'text', :class => 'form-control', :name => 'reqpublication', :value => @document[:pub_info_display][0]}
      .form-group
        %label.control-label.col-sm-2{:for => 'reqidentifier'} ISBN, ISSN, or URL:
        .col-sm-10
          %input#reqidentifier{:type => 'text', :class => 'form-control', :name => 'reqidentifier', :value => (!@isbn.nil? ? @isbn[0] : '')}
      .form-group
        %label.control-label.col-sm-2{:for => 'reqcomments'} Source of information or comments concerning this request:
        .col-sm-10
          %textarea#reqcomments{:name => 'reqcomments', :class => 'form-control'} Bibliographic information provided by CUL catalog.
      .form-group
        %label.control-label.col-sm-2{:for => 'reqnotify'} Would you like to be notified when this item is cataloged?:
        .col-sm-10
          %select#reqnotify{:name => 'reqnotify', :class => 'form-control'}
            %option{:value => 'yes', :selected => 'selected'} Yes
            %option{:value => 'no'} No

      .clearfix
        %input#request-submit.btn.btn-danger.pull-left(type="submit" name="submit" value="Submit purchase request")
      = render :partial => 'shared/request_options'
