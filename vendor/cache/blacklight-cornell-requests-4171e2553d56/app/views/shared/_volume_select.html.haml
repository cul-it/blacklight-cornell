-if @selected_volume.present?
	%select#volume-selection{:name => "volume-selection", :data =>{:request_path =>magic_request_path(@id)}}
		=options_for_select(@volumes, selected = @selected_volume)

-else
	%div.row
		%div.span12


			= render :partial => 'shared/back_to_item'

			%h1.request-type Select a Volume
	%div.row
		%div.span8.well
			%h2
				=@ti
			%div#per_page_dropdown.dropdown
				%select#volume-selection{@volumes, :name => "volume-selection", :data =>{:request_path =>magic_request_path(@id)}}
					=options_for_select({'Choose a volume...' => ''}.merge(@volumes), selected = @selected_volume)