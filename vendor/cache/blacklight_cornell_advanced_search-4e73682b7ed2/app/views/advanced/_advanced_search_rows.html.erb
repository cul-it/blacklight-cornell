<% for i in 2..2 do %>
  <div class="input_row">
    <div class="boolean_row">
      <label class="radio inline">
        <input type="radio" name="boolean_row[<%= i-1 %>]" value="AND" checked="checked"> and
      </label>
      <label class="radio inline">
        <input type="radio" name="boolean_row[<%= i-1 %>]" value="OR"> or
      </label>
      <label class="radio inline">
        <input type="radio" name="boolean_row[<%= i-1 %>]" value="NOT"> not
      </label>
    </div>

    <label for="q_row<%= i %>" class="hide-text"><%= t('blacklight.search.form.q') %></label>

    <%= text_field_tag "q_row[]", nil, :autocapitalize => "off" %>

    <%= select_tag("op_row[]", options_for_select({'all'=>'AND','any'=>'OR', 'phrase' => 'phrase'}.sort,'all' || 'phrase'), :class => 'input-small') %> in

    <%= select_tag("search_field_row[]", options_for_select(search_fields_for_advanced_search.collect{|key, field_def| [field_def.label, field_def.field]}), :class => 'advanced-search-field') %>
  </div>
<% end %>
