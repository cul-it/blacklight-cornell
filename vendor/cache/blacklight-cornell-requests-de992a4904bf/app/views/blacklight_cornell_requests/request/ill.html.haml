= render :partial => 'shared/back_to_item'
%h1.request-type Interlibrary Loan
%div.row
  %div.span8.well
    %h2.item-title-request.blacklight-title_display
      =@ti
      -if @iis.present?
        -@iis.each do |copyn, copyd|
          -if copyd[:item_enum].present?
            = copyd[:item_enum]
    %div.request-author=@au
    %p
      To request this item, complete the interlibrary loan form.
    %p
      - if !@estimate.blank?
        Delivery time: 
        = delivery_estimate_display @estimate
    .control-group
      .controls.clearfix
        %a{:href => @ill_link, :class => 'btn btn-danger pull-left'}
          Go to Interlibrary Loan Form
    -if @alternate_request_options and @alternate_request_options.count >= 2
      = render :partial => 'shared/request_options'
    -else
      .form-alternative-action
        = succeed "." do
          If you need further help, please
          =link_to 'Ask a Librarian','http://ask.library.cornell.edu'
