<div>
        <div class="form-group row">
                <div class="col-form-label col-sm-2">
                        <span class="req">*</span>
                        <label for="Format">Format:</label>
                </div>
                <div class="col-form-label col-sm-10">
                        <select class="form-control" id="Format" name="Format">
                                <option value="PDF">PDF</option>
                                <option value="TIFF 600 dpi">TIFF 600 dpi</option>
                                <option value="TIFF 600 dpi > 12x17">TIFF 600 dpi > 12x17</option>
                                <option value="MP3 of audio">MP3 of audio</option>
                                <option value="MP4 of video">MP4 of video</option>
                                <option value="MP4 of film">MP4 of film</option>
                                
                                <% holdings = JSON.parse(@document['holdings_json']) %>
                                <% show_rmc_options = true %>
                                <% holdings.each do |_, holding| %>
                                        <% location = holding['location'] %>
                                        <% if location && (location['code'].downcase.include?('kheel') || location['name'].downcase.include?('kheel')) %>
                                                <% show_rmc_options = false %>
                                                <% break %>
                                        <% end %>
                                <% end %>
                                <% if show_rmc_options %>
                                        <option value="PDF of microfilm">PDF of microfilm</option>
                                        <option value="PDF of thesis">PDF of thesis</option>
                                <% end %>
                                
                                <option value="Existing digital file">Existing digital file</option>
                        </select>
                </div>
        </div>
        <div class="form-group row">
                <div class="col-form-label col-sm-2">
                        <span class="req">*</span>
                        <label for="ServiceLevel">Service level:</label>
                </div>
                <div class="col-form-label col-sm-10">
                        <select class="form-control" id="ServiceLevel" name="ServiceLevel">
                                <option value="a. Normal">Normal</option>
                                <option value="b. Rush <3 weeks">Rush < 3 weeks</option>
                        </select>
                </div>
        </div>
        <div class="form-group row">
                <div class="col-form-label col-sm-2">
                        <span class="req">*</span>
                        <label for="ShippingOption">Delivery method:</label>
                </div>
                <div class="col-form-label col-sm-10">Digital file download
                        <select style="display:none" id="ShippingOption" name="ShippingOption">
                                <option value="a. Digital file download: $0">Digital file download</option>
                        </select>
                </div>
        </div>
</div>
<div class="form-group">
        <label for="SpecialRequest">Please enter any deadlines, special requests or questions for library staff.</label>
        <textarea class="form-control col-md-6" id="SpecialRequest" name="SpecialRequest" rows="3"></textarea>
</div>
<div class="form-group">
        <label for="Notes">Add any notes about this item or request that may be helpful for your own personal reference later.</label>
        <textarea class="form-control col-md-6" id="Notes" name="Notes" rows="3"></textarea>
</div>        
<div class="form-group">
        <label for="ItemCitation">If you have seen the image you are requesting online, please provide the URL. You may also enter an image ID number, if known.</label>
        <textarea class="form-control col-md-6" id="ItemCitation" name="ItemCitation" rows="3"></textarea>
</div>
