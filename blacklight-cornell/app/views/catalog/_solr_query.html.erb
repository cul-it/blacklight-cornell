<% if ENV["DISPLAY_SOLR_QUERY"] %>
    <%= content_tag(:dl, :class => "solr-query", :id => "solr-query-display") do %>
        <% @response["responseHeader"]["params"].each do |param| %>
            <%= content_tag(:dt, param.first) %>
            <%= content_tag(:dd, param.last) %>
        <% end %>
    <% end %>
<% end %>