<% # main container for facets/limits menu -%>
<% if has_facet_values? %>
<div id="facets" class="facets sidenav facets-toggleable-sm">

  <div class="navbar">

    <button class="navbar-toggler navbar-toggler-right facets-toggle" type="button" data-toggle="collapse" data-target="#facet-panel-collapse" aria-controls="facet-panel-collapse" aria-expanded="false" aria-label="Toggle facets">
	  <span class="sr-only">Toggle facets</span>
      <span class="navbar-toggler-icon"></span>
    </button>
  </div>

  <div id="facet-panel-collapse" class="facets-collapse collapse">
	  <%= render :partial=>'looking_for_more' %>
    <h2 class="facets-heading">
      <%= t('blacklight.search.facets.title') %>
    </h2>
    <%= render_facet_partials %>
  </div>
</div>
<% end %>
