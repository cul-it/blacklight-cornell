    <div class="card-header" id="tipsHeading">
      <h2 class="mb-0">
        <button class="btn btn-link btn-block text-left adv-tips-heading collapsed" type="button" data-toggle="collapse" data-target="#searchTips" aria-expanded="true" aria-controls="searchTips">
