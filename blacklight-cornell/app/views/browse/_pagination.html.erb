<% if params[:order] == "reverse"  %>
  <% nextpage = Integer(params[:start]) - 20 %>
<% else  %>
  <% nextpage = Integer(params[:start]) + 20 %>
<% end %>
<% nextpage = nextpage.to_s %>
<% if params[:order] == "reverse" %>
  <% previous = Integer(params[:start]) + 20 %>
<% else %>
  <% previous = Integer(params[:start]) - 20 %>
<% end %>
<% previous = previous.to_s %>
<% location = params[:fq] ? '&fq=' + CGI::escape(params[:fq]) : '' %>
<div class="results-info">
  <div class="results-count">
    <% if Integer(params[:start]) == 0 %>
      <% if !@has_previous %>
        &laquo; Previous |
      <% elsif params[:order] != "reverse" %>
        <%= link_to browse_index_path(authq: params[:authq], browse_type: params[:browse_type], start: 0, order: "reverse") + location do %>
          &laquo; Previous 
        <% end %>
        | 
      <% else %>
        <%= link_to browse_index_path(authq: params[:authq], browse_type: params[:browse_type], start: previous, order: "reverse") + location do %>
          &laquo; Previous 
        <% end %>
        | 
      <% end %>
      <% if !@has_next%>
        Next &raquo;
      <% elsif params[:order] != "reverse" %>
        <%= link_to browse_index_path(authq: params[:authq], browse_type: params[:browse_type], start: nextpage, order: "forward") + location do %>
          Next &raquo;
        <% end %>
      <% else %>
        <%= link_to browse_index_path(authq: params[:authq], browse_type: params[:browse_type], start: 0, order: "forward") + location do %>
          Next &raquo;        
        <% end %>
      <% end %>
    <% else   %>
      <% if !params[:authq].nil? and !params[:browse_type].nil? and !params[:order].nil? %>
        <%= link_to browse_index_path(authq: params[:authq], browse_type: params[:browse_type], start: previous, order: params[:order]) + location do %>
          &laquo; Previous 
        <% end %>
        | 
        <%= link_to browse_index_path(authq: params[:authq], browse_type: params[:browse_type], start: nextpage, order: params[:order]) + location do %>
          Next &raquo;
        <% end %>
      <% end %>
    <% end %>
  </div>
</div>
