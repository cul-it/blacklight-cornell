= render :partial => 'databases_search_form' 
- alpha = params[:alpha] 
.row.database-subject
	.page-title.span12
		.return-link
			=link_to "/databases/" do 
				%i.fa.fa-arrow-circle-left
				Back to Databases
.results-info


.resources		
	- @db.each do |data|
		-dbid = data["id"]
		%div.document.blacklight-database-name.clearfix
			%div.document-data
				%h4.blacklight-title_display
					-if data["fulltitle_vern_display"].present?
						=data["fulltitle_vern_display"]
					-else
						=data["fulltitle_display"]

				%div.description
					%p
						=data["summary_display"][0]

				%div.links
					%h4.blacklight-title_display
						Access Links
					-data["url_access_display"].each do |link|
						=link_to link.split('|')[0] do
							-if data["fulltitle_vern_display"].present?
								=data["fulltitle_vern_display"]
							-else
								=link.split('|')[0]
						%i.fa.fa-external-link
						%div

				%div.terms
					-if data["dbcode"].nil?
						-dbcode = ""
					-else
						-dbcode = data["dbcode"][0]
					-if data["providercode"].nil?
						-providercode = ""
					-else
						-providercode = data["providercode"][0]

					= link_to 'Terms of Use',"/databases/searchERMdb?id=#{dbid}&dbcode=#{dbcode}&providercode=#{providercode}"



