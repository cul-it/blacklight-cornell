<%-
  # Compare with render_document_functions_partial helper, and
  # _document_functions partial. BL actually has two groups
  # of document-related tools. "document functions" by default
  # contains Bookmark/Folder functionality shown on both results and
  # item view. While "document tools" contains external export type
  # functions by default only on detail.

  #Added Bootstrap class well and 'hidden-phone' for the tools-bar
-%>
<% if request.path != '/bookmarks' %>
  <% citable = is_citable(@document) %>
  <% emailable = is_emailable(@document) %>
  <% exportable = is_exportable(@document) %>
<% else %>
  <% bookmarks_index = true %>
<% end %>
<% if !bookmarks_index %>
<li><%= render :partial => "bookmark_control" , :locals => {:document => @document} %></li>
<% end %>
<!-- TODO: TRANSLATE -->
<% if bookmarks_index || citable %>
  <% citelink_content =  '<i class="fa fa-pencil" aria-hidden="true"></i>' + t('blacklight.tools.cite') %>
  <li>
    <% if bookmarks_index %>
      <%= link_to "/bookmarks/citation", {:id => 'citeLink', :name => 'citation', :class => 'lightboxLink btn btn-xs'} do %>
        <%= citelink_content.html_safe %>
      <% end %>

    <% elsif citable %>
      <%= link_to citation_solr_document_path(:id => @document), {:id => 'citeLink', :name => 'citation', :class => 'lightboxLink btn btn-default btn-xs'} do %>
        <%= citelink_content.html_safe %>
      <% end %>
    <% end %>
  </li>
<% end %>

<% if bookmarks_index || emailable %>
  <% emaillink_content = '<i class="fa fa-envelope" aria-hidden="true"></i>' + t('blacklight.tools.email') %>
  <li>
    <% if bookmarks_index %>
      <%= link_to ('/catalog/' + @bookmarks.collect {|doc| doc.document_id}.join('|')+'/email'), :class=>"lightboxLink btn btn-xs", :id => "email-link" do %>
        <%= emaillink_content.html_safe %>
      <% end %>
    <% elsif emailable %>
      <%= link_to email_solr_document_path(:id => @document), {:id => 'email-link', :class => 'lightboxLink btn btn-default btn-xs'} do %>
        <%= emaillink_content.html_safe %>
      <% end %>
    <% end %>
  </li>
<% end %>

<% if bookmarks_index || exportable %>
  <li class="dropdown">
    <div class="btn-group">
      <a href="#" class="btn btn-default btn-xs" data-toggle="dropdown" id="export-menu" aria-haspopup="true" aria-expanded="false"><i class="fa fa-share" aria-hidden="true"></i>Export <b class="caret"></b></a>
      <ul class="dropdown-menu" role="menu" aria-labelledby="export-menu">
        <% if bookmarks_index  %>
          <li>
            <%= link_to t('blacklight.tools.endnote'), endnote_solr_document_path(:sort=>params[:sort], :per_page=>params[:per_page], :page=>params[:page], :id => @bookmarks.collect {|doc| doc.document_id}, :format => 'endnote'), {:class => ' '}%>
          </li>
          <li>
            <%= link_to t('blacklight.tools.mendeley'), endnote_solr_document_path(:sort=>params[:sort], :per_page=>params[:per_page], :page=>params[:page], :id => @bookmarks.collect {|doc| doc.document_id}, :format => 'ris'), {:class => ' '}%>
          </li>
        <% elsif exportable %>
          <% if @document.export_formats.keys.include?( :endnote ) %>
            <li>
              <%= link_to t('blacklight.tools.endnote'), solr_document_path(@document, :format => 'endnote') %>
            </li>
          <% end %>
          <% if @document.export_formats.keys.include?( :mendeley ) %>
            <li>
              <%= link_to t('blacklight.tools.mendeley'), solr_document_path(@document, :format => 'ris') %>
            </li>
          <% end %>
        <% end %>
      </ul>
    </div>
  </li>
<% end %>
