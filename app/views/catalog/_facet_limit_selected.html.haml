%ul{:class => ("icons-ul" if solr_field == 'format')}
  %span.selected
  - paginator = Blacklight::Solr::FacetPaginator.new(display_facet.items,  :limit => facet_limit_for(solr_field))
  - paginator.items.each do |item|
    %li
      - if solr_field == 'format'
        %i{:class => "fa fa-#{formats_icon_mapping(item.value)}"}
      - if facet_in_params?( solr_field, item.value )
        = render_selected_facet_value(solr_field, item)
      - else
        = render_facet_value(solr_field, item)

  - if !(paginator.last_page?)
    %li.more_facets_link
      = link_to('See more Â»', params.merge(:id => solr_field, :action=>"facet"), :class => "more_facets_link")

