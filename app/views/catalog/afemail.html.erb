<% emaillink_content = '<i class="fa fa-envelope" aria-hidden="true"></i>' + t('blacklight.tools.email') %>
<%= link_to email_solr_document_path(:id => @id), {:id => 'afemail-link', :class => 'lightboxLink btn btn-default btn-xs'}  do %>
  <%= emaillink_content.html_safe %>
<% end %>

<script>
document.onload = function() {
    console.log( "ready!" );
    $("#email-link").click();
};
window.addEventListener("load", function(){
    console.log( "ready!" );
    $("#afemail-link").click();
});
</script>
