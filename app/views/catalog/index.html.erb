<div class="row">
  <%= render :partial=>'sidebar' %>

  <div class="span9 main-text">

      <% unless has_search_parameters? %>
        <%# if there are no input/search related params, display the "home" partial -%>
        <%= render 'home' %>
      <% else %>

        <h2 class="hide-text top-content-title"><%= t('blacklight.search.search_results_header') %></h2>

        <% @page_title = t('blacklight.search.title', :application_name => application_name) %>


        <% extra_head_content << render_opensearch_response_metadata.html_safe %>

        
        <%= render :partial => 'search_form' %>

        <%if paginate_params(@response).total_count < 1 %>
        <p>Your search returned 0 results. Try searching 
          <%if params[:q_row].nil?  && params[:click_to_search].nil? %>
            <a href="<%= @expanded_results['worldcat'][:url] %>">
          <% else %>
            <a href="http://cornell.worldcat.org">
          <%end%>
          Libraries Worldwide</a> or <a href="https://www.library.cornell.edu/services/request/recommend"> recommend a purchase</a>.</p>
        <%else%>
        <%= render 'sort_and_per_page' %>
        <%end%>
        <h2 class="hide-text"><%= t('blacklight.search.search_results') %></h2>
        <%= render_document_index %>


        <%= render 'results_pagination' %>


      <% end %>

  </div><!--/.main-content -->
</div>
