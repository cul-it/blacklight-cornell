<div class="digitalcollections-search">
	<p>Collections digitized and curated by Cornell University Library. Contact <a href="mailto:dcaps@cornell.edu">dcaps@cornell.edu</a> for more information.</p>
	<%= render :partial => 'digreg_search_form' %>
	<div class="digitalcollections">
		<% if @digReg.present?  %>
			<% @digReg.each do |data| %>
				<div class="document blacklight-digitalcollections-name clearfix">
					<div class="document-data">
						<h4 class="blacklight-title_display">
							<% if data["url_access_display"].present? && data["fulltitle_display"].present? %>
								<% data["url_access_display"].each do |link| %>
									<%= link_to link.split('|')[0] do %>
									  <%= data["fulltitle_display"] %>
									  <i class="fa fa-external-link"></i>
									<% end %>
								<% end %>
							<% else %>
								<%= data["fulltitle_display"] %>
							<% end %>
						</h4>
						<div class="description">
							<% if data["summary_display"].present? %>
							  <% data["summary_display"].each do |sd| %>
							    <p>
							      <%= sd  %>
							    </p>
							  <% end %>
							<% end %>
						</div>
						<div class="catalog-link">
						  <% if data["id"].present? %>
						    <%= link_to 'http://newcatalog.library.cornell.edu/catalog/' + data["id"] do %>
						      Catalog record
						    <% end %>
						  <% end %>
						</div>
					</div>
				</div>
    		<% end %>
    	<% end %>
	</div>
</div>