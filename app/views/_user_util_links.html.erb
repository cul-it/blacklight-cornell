<div class="col-sm-7 col-md-6">
  <ul class="blacklight-nav">
    <% if current_or_guest_user %>
    <%  @bookmarks = current_or_guest_user.bookmarks %>
      <li>
        <%= link_to bookmarks_path do %>
          <%= t('blacklight.header_links.bookmarks') %>
          <span data-role='bookmark-counter' id="bookmarks-count">
            <%- unless @bookmarks.nil? %>
              <%- @bookmarks.collect %>
              <%- unless @bookmarks.count < 1 %>
                (<%= @bookmarks.count %>)
              <%- end %>
            <%- end %>
          </span>
        <% end %>
      </li>
    <% end %>
    <li><%= link_to t('blacklight.header_links.search_history'), blacklight.search_history_path %></li>
