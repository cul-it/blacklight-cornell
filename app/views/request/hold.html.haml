- ho = 'http://'+request.env['HTTP_HOST']
- dx = request.env['HTTP_HOST']
- cop = dx.index(':')
- dx = dx[0..cop-1] unless (cop.nil?)
- dx = 'http://' + dx
%p
  Request this item to be held for you upon return: 
  %br
  %b=@ti
  %br
  %form{:id => 'req', :method => 'post', :action => "#{dx}:8950/holdings/hold/#{@netid}/#{@id}"}
    :javascript 
      $(function() {
      $('#req').submit( function(e) {
      return false;
      });
      $('#sumbit').click(function(e) {
        var hu = $('#req').attr('action') + '/' + $('#PICK').val();
        $('#result').html("Working....");
        $.ajax({
             type: 'POST',
             data:{"reqnna": $('#year').val()+"-"+$('#mo').val()+"-"+$('#da').val() },
             url:hu,
             dataType: 'json',
             success: function(data) {
               var st=data.status;
               var desc= (st == 'success') ? 'succeeded' : 'failed';
               $('#result').html("Your request for hold has "+desc);
             }
         });
         return false; // should block the submit
      });
      });
    %input(type="hidden" name="bid" value="#{@id}")
